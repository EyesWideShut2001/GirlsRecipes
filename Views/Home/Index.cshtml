@{
    ViewData["Title"] = "Home Page";
}


<section class="hero">
    <div class="container">
        <h2>Welcome to the Food API</h2>
        <p>Find the best recipes from around the world.</p>
    </div>
</section>

<section class="search-bar">
    <div class="container">
        <form asp-controller="Home" asp-action="RecipeSearch" method="post">
            <input type="text" class="form-control" id="searchQuery" name="searchQuery" placeholder="Enter any ingredient..." required />
            <button type="submit" >Search</button>
        </form>
    </div>
</section>

<section class="footer-icon">
    <div class="container">
        <img src="~/images/icon_home.jpg" alt="Footer Icon" class="footer-icon-img" />
    </div>
</section>
